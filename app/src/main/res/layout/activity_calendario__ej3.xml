<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.jmedinilla.relacion_2_jmedinilla.Calendario_EJ3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22dp"
        android:text="Introducir la duración media del ciclo y la fecha de la última regla:"
        android:id="@+id/textView1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center">

            <EditText
                android:layout_width="80dp"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:inputType="number"
                android:id="@+id/tbxDiasPeriodo_ej3"
                android:text="28" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Calcular"
                android:layout_marginLeft="40dp"
                android:id="@+id/btnCalculo_ej3"/>

        </LinearLayout>

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/datePick_ej3"
            android:calendarViewShown="false"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="26dp"
            android:text="Días fértiles del ciclo:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="26dp"
            android:id="@+id/txtDias_ej3"
            android:text="- ,  - ,  - ,  -"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="26dp"
            android:id="@+id/txtHoy_ej3"
            android:text="*"/>

    </LinearLayout>

</LinearLayout>
